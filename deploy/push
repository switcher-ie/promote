#!/usr/bin/env bash

set -eo pipefail

################################################################################
# Validate Inputs
################################################################################

function usage {
    echo "usage: $0 [tag]"
    echo "  tag         tag of the image version (eg. latest)"
    echo "  repository  ECR build repository (eg. broadband-plans)"
    exit 1
}

[ -z "$1" ] && { usage; }

################################################################################
# Set Inputs
################################################################################

TAG=$1
REPOSITORY=$2

################################################################################
# Constants
################################################################################

DIR="$(dirname "${BASH_SOURCE[0]}")"

################################################################################
# Set Variables
################################################################################

IMAGE="$ECR_ENDPOINT/$REPOSITORY:$TAG"

################################################################################
# Push to Repository
################################################################################

docker push "$IMAGE.build"
